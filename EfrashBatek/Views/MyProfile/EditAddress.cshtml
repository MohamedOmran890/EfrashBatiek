@model EfrashBatek.Models.Address
@{
	Layout = "LayoutProfile";
}

<div class="tab-pane fade show active" id="address" role="tabpanel" aria-labelledby="profile-tab">
	<div class="tab-content p-4 p-md-5" id="v-pills-tabContent">

		<div class="tab-pane fade show active">
			<h3 class="mb-4">Address Settings</h3>
			<form asp-action="EditAddress" asp-controller="MyProfile">
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label asp-for="FirstName">First Name</label>
							<input asp-for="FirstName" type="text" class="form-control" value="@Model.FirstName">
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label asp-for="LastName">Last Name</label>
							<input asp-for="LastName" type="text" class="form-control" value="@Model.LastName">
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label asp-for="phone">Phone</label>
							<input asp-for="phone" type="text" class="form-control" value="@Model.phone">
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label asp-for="PostalCode">Postal Code</label>
							<input asp-for="PostalCode" type="text" class="form-control" value="@Model.PostalCode">
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label asp-for="FullAddress">Full Address </label>
							<input asp-for="FullAddress" type="text" class="form-control" value="@Model.FullAddress">
						</div>
					</div>
					@*<div lass="col-md-6">
					<label asp-for="Zone" class="control-label"></label>
					<select asp-for="Zone" class="form-control" asp-items="ViewBag.Zone"></select>
					</div>*@
				</div>
				<label asp-for="description">Detailed Address</label>
				<textarea asp-for="description" class="form-control" rows="4">@Model.description</textarea>
				<div>
					<input class="btn btn-primary" value="Save Changes" type="submit" style="

								background-color: #cbaab1;
								border-color: #cbaab1;">

				</div>
			</form>

		</div>
	</div>
</div>