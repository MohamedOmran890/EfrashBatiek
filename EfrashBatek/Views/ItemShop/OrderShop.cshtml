@{
    Layout = null;
}
@model List<EfrashBatek.ViewModel.OrderVm>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/css/orders1.css">
    <!-- ====== ionicons ======= -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</head>

<body>
    <
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">Efresh Beitak </span>
        </a>
        <ul class="side-menu top">
            <li>
                <a asp-action="Seller">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li class="active">
                <a asp-action="OrderShop">
                    <i class='bx bx-list-ul'></i>
                    <span class="text">Order List </span>
                </a>
            </li>
            <li>
                <a asp-action="Create">
                    <i class='bx bx-list-plus'></i>
                    <span class="text">Add Item</span>
                </a>
            </li>
            <li>
                <a asp-action="ShopItem">
                    <i class='bx bx-list-plus'></i>
                    <span class="text">Items</span>
                </a>
            </li>
            <li>
                <a asp-action="CustomOrder">
                    <i class='bx bx-list-plus'></i>
                    <span class="text">Customize Order </span>
                </a>
            </li>
                <li>
                <a asp-action="Logout" asp-controller="Account" class="nav-link" role="tab">
						<i class='bx bx-log-out'></i>
                    Log Out
                </a>
            </li>
        </ul>
    </section>

    <!-- NAVBAR -->
    <section id="content">
        <nav>
            <i class='bx bx-menu'></i>
            <a href="#" class="nav-link">Categories</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
        </nav>
    </section>
    <!-- NAVBAR -->
    <style>

    </style>
    <!-- ORDER DETAILS -->
    <div class="details">
        <div class="recentOrders">
            <div class="cardHeader">
                <h2>Order Details</h2>
            </div>

            <table>
                <thead>
                    <tr>
                        <td>Order Code</td>
                        <td>Order Date</td>
                        <td>Customer Name</td>
                        <td>Total</td>
                        <td>orderStatus</td>
                        <td>Payment Method</td>
                        <td>Shop Name</td>
                        <td>View</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int x = 0;
                    
                    <!-- ORDER 2 -->
                    @foreach(var order in Model)
                    {
                        <tr>
                            <td>@order.order.OrderCode</td>
                            <td>@order.order.OrderDate.Day/@order.order.OrderDate.Month/@order.order.OrderDate.Year</td>

                            <td>@order.order.Customer.User.FirstName</td>
                            <td>@order.order.TotalCost  EGP</td>
                            <td>
                                <select id="pro1" >
                                        <option value="">@order.state</option>
                                    <option class="status delivered" value="delivered">
                                        Delivered
                                    </option>
                                    <option class="status return" value="return">
                                        return
                                    </option>
                                    <option class="status inProgress" value="inProgress">
                                        In Progress
                                    </option>
                                    <option class="status pending" value="pending">
                                        pending
                                    </option>
                                </select>
                                <script>
                                    const selectElement = document.querySelector('#pro1');
                                    selectElement.addEventListener('change', function () {
                                        selectElement.classList.remove('clicked-delivered', 'clicked-return', 'clicked-return', 'clicked-inProgress', 'clicked-pending');
                                        selectElement.classList.add('clicked-' + selectElement.value);
                                    });
                                </script>
                            </td>
                            <td><span class="status delivered">@order.order.PaymentMethod</span></td>
                            <td>efresh beitak</td>
                            <td>
                                <a asp-action="OrderDetails"  asp-route-id="@order.order.ID" class="edit" title="Edit" data-toggle="tooltip">

                                    <button class="btn btn-rounded">View <i class="mdi mdi-download ms-2"></i></button>

                                </a>
                            </td>
                            <td>
                                <a asp-action="DeleteOrder" asp-route-id="@order.order.ID" class="edit" title="Edit" data-toggle="tooltip">

                         

                                    <button>  <i class="material-icons">&#xE872;</i></button>
                                </a>
                               

                            </td>
                        </tr>
                    }
                    }
                 
                   
                </tbody>
            </table>
        </div>
        <script src="ّ~/js/script.js"></script>
</body>

</html>