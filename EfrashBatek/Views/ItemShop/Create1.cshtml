          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/edititem.css">
    <link rel="stylesheet" href="~/css/seller.css">

</head>

<body>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">Efresh Beitak </span>
        </a>
        <ul class="side-menu top">
            <li>
                <a href="seller.html">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="orders.html">
                    <i class='bx bx-list-ul'></i>
                    <span class="text">Order List </span>
                </a>
            </li>
            <li class="active">
                <a href="additem.html">
                    <i class='bx bx-list-plus'></i>
                    <span class="text">Add Item</span>
                </a>
            </li>
            <li>
                <a href="Items.html">
                    <i class='bx bx-list-plus'></i>
                    <span class="text">Item</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->
    <!-- NAVBAR -->
    <section id="content">
        <nav>
            <i class='bx bx-menu'></i>
        </nav>
    </section>
    <!-- NAVBAR -->
    <!--ADD Product FORM-->
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="form">
            <input type="text" id="pro" placeholder="product name">
            <span asp-validation-for="Name" class="text-danger"></span>

            <input type="text" id="pro" placeholder="product code">
            <span asp-validation-for="Code" class="text-danger"></span>

            <input type="text" id="pro" placeholder="Brand Name">
            <span asp-validation-for="Name" class="text-danger"></span>

            <input type="number" id="pro" placeholder="Quantity in store">
            <span asp-validation-for="QuantityInStore" class="text-danger"></span>

            <textarea id="des" placeholder="Product description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

            <!-- product image -->
            <div class="product-info">
                <div class="product-image"><p class="text"></p></div>
                <div class="upload-image-sec">
                    <!-- upload inputs -->
                    <!-- <p class="text"><img src="image/products/Brown right L shaped sofa.jpg" alt="">upload image</p> -->
                    <div class="upload-catalouge">
                        <input type="file" class="fileupload" id="first-file-upload-btn" hidden>
                        <label for="first-file-upload-btn" class="upload-image"></label>
                        <span asp-validation-for="Image" class="text-danger"></span>

                        <input type="file" class="fileupload" id="second-file-upload-btn" hidden>
                        <label for="second-file-upload-btn" class="upload-image"></label>
                        <span asp-validation-for="Image2" class="text-danger"></span>

                        <input type="file" class="fileupload" id="third-file-upload-btn" hidden>
                        <label for="third-file-upload-btn" class="upload-image"></label>
                        <span asp-validation-for="Image3" class="text-danger"></span>

                        <input type="file" class="fileupload" id="fourth-file-upload-btn" hidden>
                        <label for="fourth-file-upload-btn" class="upload-image"></label>
                        <span asp-validation-for="Image4" class="text-danger"></span>

                        <input type="file" class="fileupload" id="fifth-file-upload-btn" hidden>
                        <label for="fifth-file-upload-btn" class="upload-image"></label>
                        <span asp-validation-for="Image5" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="product-price">
                @*<select id="pro1" class="form-control">
                <option value="null">Select</option>
                <option value="57">
                Qena
                </option>
                <option value="57">
                Cairo
                </option>
                </select>*@
                <input type="number" id="pro1" placeholder="actual price">
                <span asp-validation-for="Price" class="text-danger"></span>


                <input type="number" id="pro1" placeholder="discount percentage">
                <span asp-validation-for="discount" class="text-danger"></span>

                <input type="number" id="pro1" placeholder="selling price">
                <span asp-validation-for="PriceAfterSale" class="text-danger"></span>

            </div>


            @*<input type="checkbox" class="checkbox" id="tac" checked>
            <label for="tac">clothing take 30% from your total sell</label>*@

            <div class="buttons">
                <input type="submit" value="Create" class="btn btn-success" id="add-btn" />
                @*            <button class="btn" id="add-btn">add product</button>
                *@            @*<button class="btn" id="save-btn">save draft</button>*@
            </div>

        </div>
    </form>
    <!-- SCRIPT -->
    <script src="js/script.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>