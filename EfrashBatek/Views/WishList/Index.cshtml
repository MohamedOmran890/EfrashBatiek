<body>

    <header>

        <a href="/Home/TrendingProducts" class="logo"><img src="~/Image/logo.png" alt=""></a>

        <ul class="navmenu">
            <li><a asp-controller="Product" asp-action="Index1">Products</a></li>
            <li><a asp-controller="Home" asp-action="TrendingProducts">Trends</a></li>
            <li><a asp-controller="Customs" asp-action="Create">Custom order</a></li>
            <li><a asp-controller="Designs" asp-action="Index">Designs</a></li>
            @if (User.IsInRole("Admin"))
            {
                <button onclick="location.href='@Url.Action("Index", "Admin")'">Admin></button>
            }

        </ul>


        <div class="nav-icon">
            <a asp-controller="Home" asp-action="TrendingProducts"><i class='bx bx-search'></i></a>
            <a asp-controller="MyProfile" asp-action="UpdateProfile"><i class='bx bx-user'></i></a>
            <a asp-controller="Cart" asp-action="Index"><i class='bx bx-cart'></i></a>
            <a asp-controller="WishList" asp-action="Index"><i class='bx bx-heart' undefined></i></a>
            <div class="bx bx-menu" id="menu-icon"></div>
        </div>


    </header>
        <link rel="stylesheet" href="~/css/wishlist.css">

    <section class="main-home1">

        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="shopping-cart">
                        @if (Model != null)
                            @foreach (var item in Model)
                            {
                                if (item != null)
                                {
                                    <div class="shadow-sm p-3 mt-md-3 mb-5 bg-body-tertiary rounded" style="background-color: #f6f6f6">
                                        <div class="row mw-500 ">
                                            <div class="col-md-6 my-auto flex1">
                                                <a asp-action="Details">
                                                    <label class="product-name">
                                                        <img src="~/Image/Items/@item.Item.Image" style="width: 80px; height: 80px" alt="">
                                                        @item.Item?.Name
                                                    </label>
                                                </a>
                                            </div>
                                            <div class="col-md-2 my-auto flex1">
                                                <label class="price">@item.Item?.Price</label>
                                            </div>
                                            <div class="col-md-2 col-5 my-auto flex1">

                                                <label class="price">@item.Item?.Code</label>


                                            </div>
                                        </div>
                                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.ItemId"><button type="submit" class="btn btn-default select mw-500">Add to Cart</button></a>
                                        <a asp-action="Delete" asp-controller="WishList" asp-route-id="@item.ItemId"><button type="submit" class="btn btn-default select mw-500">Remove Item!</button></a>

                                    </div>
                                }
                            }
                    </div>
                </div>
            </div>

        </div>

    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
