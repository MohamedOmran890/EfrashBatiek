@model EfrashBatek.Models.Shop

@{
    ViewData["Title"] = "AddShop";
}

<h1>AddShop</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveShop">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Shop Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShopAddress" class="control-label">Address</label>
                <input asp-for="ShopAddress" class="form-control" />
                <span asp-validation-for="ShopAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxCardImage" class="control-label">Tax Card</label>
                <input asp-for="TaxCardImage" class="form-control" />
                <span asp-validation-for="TaxCardImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShopNumber" class="control-label"></label>
                <input asp-for="ShopNumber" class="form-control" />
                <span asp-validation-for="ShopNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
