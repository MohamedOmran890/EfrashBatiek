@{
    Layout = null;
}
@model User 
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Details</title>
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/css/seller details.css">
    <!-- SCRIPT -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <!-- Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>

</head>

<body>
    <!-- SIDEBAR -->
    <!-- SIDEBAR -->
    <!-- NAVBAR -->
    <section id="content">
        <nav>
            <i class='bx bx-menu'></i>
            <a href="#" class="nav-link">Categories</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
        </nav>
    </section>
    <!-- NAVBAR -->
    <!-- ORDER DETAILS -->
    <div class="details">
        <div class="recentOrders">
            <div class="cardHeader">
                <h2>Seller Details</h2>
            </div>

            <table>
                <thead>
                    <tr>

                        <td>Name</td>
                        <td>Email</td>
                        <td>Age</td>
                        <td>Phone</td>
                     
                    </tr>
                </thead>
                <form asp-action="EditSellerr" asp-controller="Admin">
                <tbody>
                    <tr>
                        <td>
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" type="text" class="form-control" value="@Model.FirstName">
                        </td>
                        <td>
                            <label asp-for="LastName">LastName</label>
                            <input asp-for="LastName" type="text" class="form-control" value="@Model.LastName">
                        </td>

                        <td>
                            <label asp-for="Email"></label>
                            <input asp-for="Email" type="text" class="form-control" value="@Model.Email">
                         </td>
                        <td>
                            <label asp-for="age"></label>
                            <input asp-for="age" type="text" class="form-control" value="@Model.age">
                            
                        </td>
                        <td>
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" type="text" class="form-control" value="@Model.UserName">

                        </td>

                        <label asp-for="PhoneNumber"></label>
                        <td> <input asp-for="PhoneNumber" type="text" class="form-control" value="@Model.PhoneNumber"> </td>

                        <td> <input asp-for="Id" type="hidden" class="form-control" value="@Model.Id"> </td>
                        
                        <td>
                               
                            <input class="btn btn-primary" value="Save Changes" type="submit" style="

								background-color: #cbaab1;
								border-color: #cbaab1;">


                        </td>
                   
                        
                    </tr>



                </tbody>
                </form>
              
            </table>
        </div>

        <!-- SCRIPT -->
        <script src="~/js/script.js"></script>
</body>

</html>