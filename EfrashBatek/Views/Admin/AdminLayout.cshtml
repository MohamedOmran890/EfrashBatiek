<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title> Admin Dashboard </title>
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/css/addseller.css">
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>
    <!--DASHBOARD SIDEBAR-->
    <div class="sidebar">
        <div class="logo-details">
            <i class='bx bxl-c-plus-plus'></i>
            <span class="logo_name">Efresh Baitak</span>
        </div>
        <ul class="nav-links">
            <li>
                <a href="dash.html">
                    <i class='bx bx-grid-alt'></i>
                    <span class="links_name">Dashboard</span>
                </a>
            <li>
                <a href="orders.html">
                    <i class='bx bx-list-ul'></i>
                    <span class="links_name">Order list</span>
                </a>
            </li>
            <li>
                <a href="addseller.html" class="active">
                    <i class='bx bx-coin-stack'></i>
                    <span class="links_name">Add Seller</span>
                </a>
            </li>
            <li>
                <a href="addshop.html">
                    <i class='bx bx-coin-stack'></i>
                    <span class="links_name">Add Shop</span>
                </a>
            </li>
            <li>
                <a href="seller details.html">
                    <i class='bx bx-book-alt'></i>
                    <span class="links_name">Seller Details</span>
                </a>
            </li>
        </ul>
    </div>
   @RenderBody();

    <script>
        let sidebar = document.querySelector(".sidebar");
        let sidebarBtn = document.querySelector(".sidebarBtn");
        sidebarBtn.onclick = function () {
          sidebar.classList.toggle("active");
          if (sidebar.classList.contains("active")) {
            sidebarBtn.classList.replace("bx-menu", "bx-menu-alt-right");
          } else
            sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
        }
    </script>

</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}