@{
	Layout = "CustomerLayout";
}

@model Address 
<link rel="stylesheet" href="~/css/Checkout address.css ">	
<br>
<br>
<br>
<div class="aaaa">

	<!-- ICONS -->
	<div id="address" class=" hr steps checkout-address icons col-sm-11 col-md-11 col-lg-9 col-xl-9 bg-white">
		<ul class="icons hr steps icons col-sm-11 col-md-11 col-lg-11 col-xl-11 bg-white">
			<ul>
				<li class="word">
					<a href="default address.html">
						<i class='bx bxs-location-plus' style=" font-size: 38px;"></i>
						<h2 class="word">Shipping</h2>
					</a>
				</li>

			</ul>
			<ul>
				<li class="word">
					<a href="payment method.html">
						<i class='bx bx-credit-card' style=" font-size: 38px;"></i>
						<h2 class="word">Payment</h2>
					</a>
				</li>
			</ul>
			<ul>
				<li class="word">
					<a href="Order Confirmation.html">
						<i class='bx bx-badge-check' style=" font-size: 38px;"></i>
						<h2 class="word">Confirmation</h2>
					</a>
				</li>
			</ul>
		</ul>
	</div>

	<div class="row">
		<form asp-action="EditAddress">
			<div class="col-sm-12 col-md-12 col-lg-9 col-xl-9">
				<div id="address" class="tabpanel">
					<h3 class="mb-4">Address Settings</h3>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label asp-for="FirstName">First Name</label>
								<input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" value="@Model.FirstName">
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label asp-for="LastName">Last Name</label>
								<input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" value="@Model.LastName">
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label asp-for="FullAddress">Address</label>
								<input asp-for="FullAddress" type="text" class="form-control" placeholder="Address" value="@Model.FullAddress">
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label asp-for="PostalCode">Postal Code</label>
								<input asp-for="PostalCode" type="number" class="form-control" placeholder="Postal Code" value ="@Model.PostalCode">
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label asp-for="phone">Phone Number</label>
								<input asp-for="phone" type="number" class="form-control" placeholder="Phone Number" value ="@Model.phone">
							</div>
						</div>
						@*<div class="col-md-6">
						<div class="form-group">
						<label>City</label>
						<select id="citySelect" class="form-control">
						<option value="null">Select</option>
						<option value="57">
						Qena
						</option>
						<option value="57">
						Cairo
						</option>
						</select>
						</div>
						</div>*@
						<input type="submit" class="btnRegister" value="Save">

					</div>
				</div>
			</div>

		</form>

		<div class="col-sm-12 col-md-12 col-lg-3 col-xl-3">
			<aside>
				<div class="summary">
					<div class="summary-total-items">
						<span class="total-items"></span> Order Summary
					</div>
					<div class="summary-subtotal">
						<div class="subtotal-title">Subtotal</div>
						<div class="subtotal-value final-value" id="basket-subtotal">130.00</div>
						<div class="summary-promo hide">
							<div class="promo-title">Promotion</div>
							<div class="promo-value final-value" id="basket-promo"></div>
						</div>
					</div>
					<div class="summary-delivery">
						<tbody>
							@foreach (var item in ViewBag.list)
							{
								<tr>
									<td>
										<div class="d-flex mb-2">
											<div class="flex-shrink-0">
												<img src="~/Image/products/@item.Item?.Image" alt="" width="35" class="img-fluid">
											</div>
											<div class="flex-lg-grow-1 ms-3">
												<h6 class="small mb-0"><a href="#" class="text-reset">@item.Item?.Name</a></h6>
												<span class="small">Color: Black</span>
											</div>
										</div>
									</td>
									<td>@item.Quantity</td>
									<td class="text-end"> @item.Item?.Price</td>
								</tr>

							}


						</tbody>
					</div>
					<div class="summary-total">
						<div class="total-title">Total</div>
						<div class="total-value final-value" id="basket-total">130.00</div>
					</div>
					<div class="summary-checkout">
						<a asp-action="ViewDetails" asp-controller="Checkout" asp-route-id="@ViewBag.cartID"><button class="checkout-cta">Go to Secure Checkout</button></a>
					</div>
				</div>
			</aside>
		</div>
	</div>
</div>