   @RenderBody();
    <footer>

        <!-- contact-section -->
        <!-- contact-section -->
        <section class="contact">
            <div class="contact-info">
                <div class="first-info">
                    <img src="~/image/logo.png" alt="">

                    <p>01601348732</p>
                    <p>efresh.beitak@gmail.com</p>

                    <div class="social-icon">
                        <a href="https://www.facebook.com/profile.php?id=100008757484239"><i class='bx bxl-facebook'></i></a>
                        <a href="https://twitter.com/home"><i class='bx bxl-twitter'></i></a>
                        <a href="https://www.instagram.com/mo7863051/.html"><i class='bx bxl-instagram'></i></a>
                        <a href="https://www.youtube.com/channel/UCaQCDzKebW-atpAOP1eM38A"><i class='bx bxl-youtube'></i></a>
                        <a href="https://www.linkedin.com/in/mohamed-omran-ab72a7233/"><i class='bx bxl-linkedin'></i></a>
                    </div>
                </div>

                <div class="second-info">
                    <h4>Support</h4>
                    <br />
                    <a asp-action="ContactUs" asp-controller="Contact_Us">Contact us</a>
                    <a asp-action="AboutUs" asp-controller="Home">About page</a>
                    <a>Shopping & Resturns</a>
                    <a asp-action="Privacy" asp-controller="Home">Privacy Policy</a>
                </div>

                <div class="third-info">
                    <a asp-action="Index" asp-controller="Category" asp-route-Category="Category">Shop</a>
                    <a asp-action="Index" asp-controller="Category" asp-route-Category="Category">Home</a>
                    <a asp-action="Index" asp-controller="Category" asp-route-Category="Category">Furniture</a>
